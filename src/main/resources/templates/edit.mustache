<!DOCTYPE html>
<html>
    <head>
        <title>Editar perfil</title>
        <link rel="stylesheet" href="/css/styleEditProfile.css">
        <script>
            let flag = true;
            function visualizeEye() {
                if(flag){
                    document.getElementById("password").type = "password";
                    document.getElementById("Eye").src = "/imagenes/openedEye.png";
                    flag=false;
                }else{
                    document.getElementById("password").type = "text";
                    document.getElementById("Eye").src = "/imagenes/closedEye.png";
                    flag=true;
                }
            }
            function goBackwards(){
                window.location.href = "/users/{{user.id}}";
            }
        </script>
    </head>
    <body>
        <div class="goBackButtonContainer">
            <button type="button" class="goBackButton" onclick="goBackwards()">
                <img src="/imagenes/goBack.jpg" alt="flechaPaginaAnterior">
            </button>
        </div>
        <div class="userImage">
            <img src="/imagenes/emptyUser.png" alt="Foto usuario">
        </div>
        <div class="editImageButtonContainer">
            <button class="editImageButton">Editar imagen</button>
        </div>
        <br>
        <form>
            <label for="username" class="title">Username</label><br>
            <input name="username" type="text" class="field"><!-- Revisar no esté cogido ya-->
            <br><br>
            <label for="password" class="title">Password</label><br>
            <span class="passwordContainer">
                <input name="password" id="password" type="password" class="field">
                <img class="eyeImage" src="/imagenes/openedEye.png" id="Eye" onclick="visualizeEye()" alt="Visualizar contraseña"><!-- foto ojo y funcion-->
            </span>
            <br>
            <label for="gender" class="title">Género</label><br>
            <select name="gender"  class="select">
                <option>Masculino</option>
                <option>Femenino</option>
            </select>
            <br><br>
            <label for="height" class="title">Altura</label><br>
            <input name="height" type="number" inputmode="numeric" step="1"
                   min="50" max="280" placeholder="cm"  class="numeric">
            <br><br>
            <label for="age" class="title">Edad</label><br>
            <input name="age" type="number" inputmode="numeric" step="1"
                   min="3" max="130" class="numeric">
            <br><br>
            <label for="weight" class="title">Peso</label><br>
            <input name="weight" type="number" inputmode="numeric" step="1"
                   min="15" max="300" placeholder="kg" class="numeric">
            <br><br>
            <label for="goalWeight" class="title">Peso objetivo</label><br>
            <input name="goalWeight" type="number" inputmode="numeric" step="1"
                   min="15" max="300" placeholder="kg" class="numeric">
            <br><br>
            <label for="morphology" class="title">Morfología</label><br>
            <select name="morphology" class="select">
                <option>Ectomorfo</option> <!-- Al pasar el cursor añadir explicacion-->
                <option>Endomorfo</option>
                <option>Mesomorfo</option>
            </select>
            <br><br>
            <label for="caloricPhase" class="title">Etapa calórica</label><br>
            <select name="caloricPhase" class="select">
                <option>Definición</option><!-- Añadir también explicación-->
                <option>Mantenimiento</option>
                <option>Volumen</option>
            </select>
            <br><br>
        </form>
        <span class="lowerButtonsContainer">
            <button class="cancelButton" onclick="goBackwards()">Cancelar</button>
            <button class="saveButton">Guardar</button>
        </span>
    </body>
</html>