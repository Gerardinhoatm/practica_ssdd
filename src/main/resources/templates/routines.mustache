<!DOCTYPE html>
<html>
    <head>
        <title>Rutinas</title>
        <link rel="stylesheet" href="/css/styleRoutines.css">
        <script>
            function goBackwards(){
                window.location.href = "/Portada?id={{userId}}";
            }
            function goToCreate(){
                window.location.href = "/routines/createRoutine?id={{userId}}";
            }
        </script>
    </head>
    <body>
        <div class="goBackButtonContainer">
            <button type="button" class="goBackButton" onclick="goBackwards()">
                <img src="/imagenes/goBack.jpg" alt="flechaPaginaAnterior">
            </button>
        </div>
        <br><br>
        <div class="goToCreateButtonContainer">
            <button type="button" class="goToCreateButton" onclick="goToCreate()">Crear rutina</button>
        </div>
        {{^routines}}
            <p class="noRoutines">Todavia no se han agregado rutinas</p>
        {{/routines}}
        {{#routines}}
            <select class="select">
                <option>
                    {{name}}
                </option>
            </select>
        {{/routines}}
    </body>
</html>